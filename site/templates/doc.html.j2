{% extends "base.html.j2" %}

{% block title %}{{ title }} - Benjamin Connelly{% endblock %}

{% block content %}
<div class="breadcrumb">
    <a href="/">Home</a> &gt; <a href="/research/">Research</a> &gt; {{ title }}
</div>

{% if metadata %}
<div class="doc-metadata">
    <table>
        {% for key, value in metadata.items() %}
        <tr>
            <td><strong>{{ key }}</strong></td>
            <td>{{ value }}</td>
        </tr>
        {% endfor %}
    </table>
</div>
{% endif %}

<div class="doc-content">
    {{ content }}
</div>
{% endblock %}
